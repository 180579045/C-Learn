<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1000">

    <Window.Resources>

        <!-- 控件模板 -->
        <ControlTemplate x:Key="cTmp">
            <StackPanel>
                <TextBox x:Name="textBox1" Margin="6"/>
                <TextBox x:Name="textBox2" Margin="6,0"/>
                <TextBox x:Name="textBox3" Margin="6"/>
            </StackPanel>
        </ControlTemplate>
        
        
        
    </Window.Resources>



    <Grid>
        <TabControl>
            <!-- 主要用来展示纯前端的处理 -->
            <TabItem Header="纯前端处理">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"></ColumnDefinition>
                        <ColumnDefinition Width="300"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <DockPanel Grid.Column="0" Margin="10,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="100"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="100"></RowDefinition>
                            </Grid.RowDefinitions>

                            <!-- 使用所谓的CSS和Javascript -->
                            <StackPanel Grid.Row="0">
                                <Button Style="{StaticResource BlueButton}">蓝色按钮</Button>
                                <Button Style="{StaticResource ButtonTrigger}">蓝色按钮和触发事件</Button>
                            </StackPanel>

                            <Canvas x:Name="canvas1" Grid.Row="1"></Canvas>

                            <ToggleButton Grid.Row="2">111</ToggleButton>

                            <UserControl x:Name="uc" Template="{StaticResource cTmp}" Grid.Row="3"/>

                            <TextBox x:Name="tb"  Style="{StaticResource tbstyle}" Grid.Row="4"/>

                            <StackPanel Grid.Row="5">
                                
                                <Label>控件绑定前端元素：</Label>
                                <TextBox Text="{Binding ElementName=slider1, Path=Value, Mode=OneWay}"></TextBox>
                                <Slider x:Name="slider1" Maximum="20"></Slider>
                            </StackPanel>

                        </Grid>

                    </DockPanel>

                    <DockPanel Grid.Column="1">


                        
                    </DockPanel>
                    

                </Grid>
            </TabItem>

            <TabItem Header="H2">
                
                
            </TabItem>

            
        </TabControl>


    </Grid>
</Window>
